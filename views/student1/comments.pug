doctype html
html
  head
    title Party Bachelors- student 1
  body
    h1 Comments

    ul
      - for (let i = 0; i < comments.length; i++)
        li
          =comments[i].comment
        section Author:
          =comments[i].author
        ul
          li
            form(action="/student1/comments/update", method="GET")
              input(type="hidden", name="id", value=comments[i].id)
              button(type="submit") [Update]
          li
            form(action="/student1/comments/delete", method="POST")
              input(type="hidden", name="id", value=comments[i].id)
              button(type="submit") [Delete]

    form(action="/student1/comments", method="POST")
      p Add many new comments!
      input(type="text", name="comment", placeholder="Comment", required)
      input(type="text", name="author", placeholder="Author", required)
      button(type="submit") Add Comment

    form(action="/student1", method="GET")
      button(type="submit") Back to Page

